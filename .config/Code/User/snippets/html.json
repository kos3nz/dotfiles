{
  // Place your snippets for html here. Each snippet is defined under a snippet name and has a prefix, body and
  // description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
  // $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the
  // same ids are connected.
  // Example:
  "svg element": {
    "prefix": "svg",
    "body": ["<svg></svg>"],
    "description": "svg element"
  },
  "use element": {
    "prefix": "use",
    "body": ["<use xlink:href=\"$0\"></use>"],
    "description": "use element"
  },
  "colored comment .html": {
    "prefix": "::",
    "body": ["<!--:: =============== $0 =============== ::-->"],
    "description": "colored comment"
  },
  //:: =============== SEO_HTML =============== :://
  "Add SEO tags to HTML head element": {
    "prefix": "seo:head",
    "body": [
      "<link rel=\"canonical\" href=\"$1\" />",
      "<meta property=\"og:url\" content=\"$1\" />",
      "<meta property=\"og:title\" content=\"$2\" />",
      "<meta name=\"twitter:title\" content=\"$2\" />",
      "<meta name=\"description\" content=\"$3\" />",
      "<meta name=\"twitter:description\" content=\"$3\" />",
      "<meta property=\"og:description\" content=\"$3\" />",
      "<meta name=\"og:image\" content=\"$4\" />",
      "<meta name=\"image\" property=\"og:image\" content=\"$4\" />",
      "<meta name=\"twitter:image\" content=\"$4\" />",
      ""
    ],
    "description": "Add basic SEO tags to HTML <head> element"
  },

  "Add Article schema": {
    "prefix": "seo:schema:article",
    "body": [
      "<script type=\"application/ld+json\">",
      "{",
      "\"@context\": \"https://schema.org\",",
      "\"@type\": \"NewsArticle\",",
      "\"headline\": \"$1\",",
      "\"image\": [",
      "\"$2\",",
      "],",
      "\"datePublished\": \"$3\",",
      "\"dateModified\": \"$4\"",
      "}",
      "</script>"
    ],
    "description": "Add Article schema"
  },

  "Add Breadcrumb schema": {
    "prefix": "seo:schema:breadcrumb",
    "body": [
      "<script type=\"application/ld+json\">",
      "{",
      "\"@context\": \"https://schema.org\",",
      "\"@type\": \"BreadcrumbList\",",
      "\"itemListElement\": [{",
      "\"@type\": \"$1\",",
      "\"position\": 1,",
      "\"name\": \"$2\",",
      "\"item\": \"$3\"",
      "}]",
      "}",
      "</script>"
    ],
    "description": "Add Breadcrumb schema"
  },

